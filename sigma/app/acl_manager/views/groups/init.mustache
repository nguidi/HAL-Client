<div class="container-caption">
	<h4>
		Grupos
	</h4>
	<div class="breadcrumb">
		<form class="form-inline" onSubmit="return false;">
			<label for="group">
				Buscar:
			</label>
			<input type="text" class="input-large search" name="group">
		{{#add}}
			<button type="button" class="add-group btn btn-primary pull-right" {{data 'link'}}>
				<i class="icon-info-plus-sign"></i>
				Nuevo Grupo
			</button>
		{{/add}}
		</form>
	</div>
</div>
<div class="container-table">
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>#</th>
				<th>Nombre del Grupo</th>
				<th>Permisos Generales</th>
			</tr>
		</thead>
		<tbody>
			{{#groups}}
			<tr>
				<td>{{id}}</td>
				<td>
					<a id="{{id}}" class="editable" {{data 'group'}}>
						{{group}}
					</a>
				</td>
				<td>
					<ul>
						{{#permissions}}
						<li>
							<a id="{{id}}" {{data 'permission'}}>
								{{permission}}
							</a>
						</li>
						{{/permissions}}
					<ul>
				</td>
				<td>
					<a>
						<i class="icon-remove"></i>
						</a>
				</td>
			</tr>
			{{/groups}}
		</tbody>
	</table>
	<div class="paginator">
		<ul class="pager">
			<li>
				<a class="browseable">
					&larr; Anterior
				</a>
			</li>
			<li>
				<a class="browseable">
					Siguiente &rarr;
				</a>
			</li>
		</ul>
	</div>
</div>