<div class="modal" tabindex="-1" role="dialog" aria-labelledby="Nuevo Grupo" aria-hidden="true">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
		<h3>Nuevo Grupo</h3>
	</div>
	<div class="modal-body">
		<form class="form-horizontal">
			<legend>
				<h5>
					Complete el formulario y presione guardar para crear el nuevo grupo...
				</h5>
			</legend>
			<div class="control-group">
				<label class="control-label" for="group">Nombre</label>
				<div class="controls">
					<input type="text" name="group" placeholder="Nombre del Grupo...">
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="permisos">Permisos Generales</label>
				<div class="controls">
					{{#permissions}}
					<label class="checkbox">
						<input type="checkbox" name="permisos" value="{{id}}">
						{{permission}}
					</label>
					{{/permissions}}
				</div>
			</div>
		</form>
	</div>
	<div class="modal-footer">
		<button class="btn" data-dismiss="modal" aria-hidden="true">Cancelar</button>
		<button class="btn btn-primary save-group">Crear</button>
	</div>
</div>