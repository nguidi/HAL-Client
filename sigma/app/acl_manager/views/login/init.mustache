</div>
<div id="wellcome" class="hero-unit container-fluid">
	<div class="row-fluid">
		<div class="span6 container-fluid">
			<div class="row-fluid">
				<div class="span4">
					<span class="icon-stack  icon-4x">
						<i class="icon-check-empty icon-stack-base"></i>
						<i class="icon-rocket" alt="Wellcome"></i>
					</span>
				</div>
				<div class="span8">
					<h2>
						{{title}}
					</h2>
					<p>
						{{welcome}}
					</p>
				</div>
			</div>
		</div>
		<div class="span5">
			<form class="form-horizontal pull-right">
				<div class="control-group">
					<div class="controls">
						<h4>
							INGRESE AL SISTEMA
						</h4>
					</div>
				</div>
				<div class="control-group">
					<label for="username" class="control-label">Usuario</label>
					<div class="controls">
						<input name="username" type="text">
					</div>
				</div>
				<div class="control-group">
					<label for="password" class="control-label">Contraseña</label>
					<div class="controls">
						<input name="password" type="password">
					</div>
				</div>
				{{#signin}}
				<div class="control-group"> 
					<div class="controls">
						<a class="btn btn-inverse pull-right browseable {{name}}" {{data 'link'}}>
							Ingresar
						</a>
					</div>
				</div>
				{{/signin}}
			</form>
		</div>
	</div>
</div>
